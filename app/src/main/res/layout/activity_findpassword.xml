<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F5">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#FF9100"
        >
        <ImageView
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:src="@mipmap/back"
            android:id="@+id/iv_findpassword_back"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="找回密码"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:id="@+id/tv_findpassword_title"
            android:layout_toRightOf="@+id/iv_findpassword_back"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="123dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginTop="9dp"
        android:orientation="horizontal"
        android:background="#FFFFFF">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="邮箱"
            android:textSize="16dp"
            android:textColor="#FF9100"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:hint="请输入账号"
            android:textSize="16dp"
            android:background="@null"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginTop="9dp"
        android:orientation="horizontal"
        android:background="#FFFFFF">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="中国+86"
            android:textSize="16dp"
            android:textColor="#FF9100"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:hint="请输入手机号"
            android:textSize="16dp"
            android:background="@null"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginTop="9dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        >
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:id="@+id/llayout_findpassword_yanzhengma"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证码"
                android:textSize="16dp"
                android:textColor="#FF9100"
                android:layout_centerVertical="true"


                />
        </LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:hint="请输入验证码"
            android:textSize="16dp"
            android:background="@null"
            android:layout_toRightOf="@+id/llayout_findpassword_yanzhengma"
            android:id="@+id/valiCode"
            android:layout_marginRight="120dp"
            />
        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:textSize="12dp"
            android:layout_alignParentRight="true"
            android:textColor="#FF9100"
            android:background="#FFFFFF"
            android:id="@+id/getvaliCode"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#EAEAEB"
        >
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginTop="9dp"
        android:orientation="horizontal"
        android:background="#FFFFFF">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="新密码"
            android:textSize="16dp"
            android:textColor="#FF9100"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/newpass"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:hint="请输入新密码"
            android:textSize="16dp"
            android:background="@null"
            />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:background="@drawable/button_shape"
        android:text="下 一 步"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="9dp"
        android:textSize="16dp"
        android:id="@+id/bt_findpassword_next"
        />
</LinearLayout>