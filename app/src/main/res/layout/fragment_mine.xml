<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F3F0"
    tools:context="com.buuyou.fragment.mineFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#FF9100"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的"
            android:textSize="16dp"
            android:textColor="#FFFFFF"
            android:id="@+id/tv_fragmentfirstpage_title"

            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:background="#FFFFFF">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/touxiang_firstpage"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/iv_fragmentmine_touxiang"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="布优销卡"
            android:layout_toRightOf="@+id/iv_fragmentmine_touxiang"
            android:layout_marginTop="15dp"
            android:textSize="17dp"
            android:textColor="#444444"
            android:layout_marginLeft="15dp"
            android:id="@+id/tv_fragmentmine_name"
            />
        <!--()里的内容需要引入数据，重新添加数据-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="（ID:123456789@qq.com）"
            android:layout_toRightOf="@+id/iv_fragmentmine_touxiang"
            android:layout_below="@+id/tv_fragmentmine_name"
            android:layout_marginTop="9dp"
            android:textSize="14dp"
            android:textColor="#999999"
            android:layout_marginLeft="15dp"
            android:id="@+id/tv_fragmentmine_id"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密钥："
            android:layout_toRightOf="@+id/iv_fragmentmine_touxiang"
            android:layout_below="@+id/tv_fragmentmine_id"
            android:id="@+id/miyue"
            android:layout_marginTop="12dp"
            android:textSize="14dp"
            android:textColor="#999999"
            android:layout_marginLeft="14dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="（密钥：123456）"
            android:layout_toRightOf="@+id/miyue"
            android:layout_below="@+id/tv_fragmentmine_id"
            android:layout_marginTop="12dp"
            android:textSize="14dp"
            android:textColor="#999999"

            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:id="@+id/et_fragmentmine_pwd"
            android:singleLine="true"

            />


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#EAEAEA">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="68dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:id="@+id/llayout_fragmentmine_basicinfo">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/safecenter"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="基本信息"
                android:textSize="14dp"
                android:textColor="#030303"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="68dp"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:background="#FFFFFF"
            android:id="@+id/llayout_fragmentmine_accountinfo">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/safecenter"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账户信息"
                android:textSize="14dp"
                android:textColor="#030303"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EAEAEA">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:orientation="horizontal"

        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="68dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:id="@+id/llayout_fragmentmine_safecenter">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/safecenter"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="安全中心"
                android:textSize="14dp"
                android:textColor="#030303"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="68dp"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:background="#FFFFFF"
            android:id="@+id/llayout_fragmentmine_changepwd">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/changepwd"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改密码"
                android:textSize="14dp"
                android:textColor="#030303"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EAEAEA">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="68dp"
            android:layout_weight="1"
            android:background="#FFFFFF">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="22dp"
                android:src="@mipmap/loginlog"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录日志"
                android:textSize="14dp"
                android:textColor="#030303"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="68dp"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:background="#FFFFFF">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="24dp"
                android:src="@mipmap/tongdaofei"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="通道费率"
                android:textSize="14dp"
                android:textColor="#030303"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EAEAEA">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="68dp"
            android:layout_weight="1"
            android:background="#FFFFFF">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/about"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关于"
                android:textSize="14dp"
                android:textColor="#030303"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="68dp"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:background="#FFFFFF">
            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@mipmap/safecenter"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="版本更新"
                android:textSize="14dp"
                android:textColor="#030303"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/exit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@mipmap/exitbt"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="21dp"/>


</LinearLayout>
