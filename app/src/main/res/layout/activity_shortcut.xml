<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F3F0"
    tools:context="com.buuyou.firstpageson.Shortcut">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#FF9100"
        >
        <ImageView
            android:layout_width="18dp"
            android:layout_height="17dp"
            android:src="@mipmap/backarrow"
            android:id="@+id/iv_shortcut_back"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            />
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="21dp"
            android:background="#D07600"
            android:layout_toRightOf="@+id/iv_shortcut_back"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:id="@+id/vertical"
            android:layout_centerVertical="true">
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快捷方式"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:id="@+id/tv_basicinfo_title"
            android:layout_toRightOf="@+id/vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商户资料"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="4dp"
                android:textSize="11dp"
                android:textColor="#909090"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_marginTop="4dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:id="@+id/rlayout_shortcut_basicinfo"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="基本资料"
                        android:textColor="#909090"
                        android:textSize="14dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"/>
                    <ImageView
                        android:layout_width="9dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/next"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#EAEAEA"></LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:id="@+id/rlayout_shortcut_accountinfo">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="账户信息"
                        android:textColor="#909090"
                        android:textSize="14dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"/>
                    <ImageView
                        android:layout_width="9dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/next"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#EAEAEA"></LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:id="@+id/rlayout_shortcut_safecenter">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="安全中心"
                        android:textColor="#909090"
                        android:textSize="14dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"/>
                    <ImageView
                        android:layout_width="9dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/next"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#EAEAEA"></LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:id="@+id/rlayout_shortcut_changepwd">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="修改密码"
                        android:textColor="#909090"
                        android:textSize="14dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"/>
                    <ImageView
                        android:layout_width="9dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/next"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"/>
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单管理"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="4dp"
                android:textSize="11dp"
                android:textColor="#909090"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_marginTop="4dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="成功订单"
                        android:textColor="#909090"
                        android:textSize="14dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"/>
                    <ImageView
                        android:layout_width="9dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/next"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#EAEAEA"></LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="失败订单"
                        android:textColor="#909090"
                        android:textSize="14dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"/>
                    <ImageView
                        android:layout_width="9dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/next"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#EAEAEA"></LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="交易中订单"
                        android:textColor="#909090"
                        android:textSize="14dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"/>
                    <ImageView
                        android:layout_width="9dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/next"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"/>
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="财务管理"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="4dp"
                android:textSize="11dp"
                android:textColor="#909090"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_marginTop="4dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="提现申请"
                        android:textColor="#909090"
                        android:textSize="14dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"/>
                    <ImageView
                        android:layout_width="9dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/next"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#EAEAEA"></LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="申请列表"
                        android:textColor="#909090"
                        android:textSize="14dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"/>
                    <ImageView
                        android:layout_width="9dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/next"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#EAEAEA"></LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已提现列表"
                        android:textColor="#909090"
                        android:textSize="14dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"/>
                    <ImageView
                        android:layout_width="9dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/next"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"/>
                </RelativeLayout>
            </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="统计分析"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="4dp"
                    android:textSize="11dp"
                    android:textColor="#909090"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:layout_marginTop="4dp"
                    android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="通道收入分析"
                        android:textColor="#909090"
                        android:textSize="14dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"/>
                    <ImageView
                        android:layout_width="9dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/next"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"/>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
