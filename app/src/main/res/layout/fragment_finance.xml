<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.buuyou.fragment.FinanceFragment">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#FF9100"
            android:text="财务管理"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:orientation="horizontal"
        android:background="#FFFFFF">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/rlayout_finance_left">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提现申请"
                android:textColor="#FF9100"
                android:textSize="13dp"
                android:layout_centerInParent="true"
                android:id="@+id/tv_finance_lefttitle"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="#FF9100"
                android:orientation="horizontal"
                android:id="@+id/llayout_finance_leftline"></LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="21dp"
            android:background="#E1E1E1"
            android:layout_gravity="center"></LinearLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/rlayout_finance_center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申请列表"
                android:textColor="#646464"
                android:textSize="13dp"
                android:layout_centerInParent="true"
                android:id="@+id/tv_finance_centertitle"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:id="@+id/llayout_finance_centerline"></LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="21dp"
            android:background="#E1E1E1"
            android:layout_gravity="center"></LinearLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/rlayout_finance_right">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已申请列表"
                android:textColor="#646464"
                android:textSize="13dp"
                android:layout_centerInParent="true"
                android:id="@+id/tv_finance_righttitle"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:id="@+id/llayout_finance_rightline"></LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_finance"></FrameLayout>

</LinearLayout>
