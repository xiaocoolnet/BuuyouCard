<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F5"
    android:id="@+id/llayout_changepassword_activity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#FF9100"
        >
        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:id="@+id/iv_changepassword_back">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:src="@mipmap/back"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:id="@+id/tv_changepassword_title"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_changepassword_back"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginTop="9dp"
        android:orientation="horizontal"
        android:background="#FFFFFF">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="邮箱"
            android:textSize="16dp"
            android:textColor="#FF9100"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            />
        <EditText
            android:id="@+id/et_changepassword_email"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:hint="请输入账号"
            android:textSize="16dp"
            android:background="@null"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginTop="9dp"
        android:orientation="horizontal"
        android:background="#FFFFFF">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="原密码"
            android:textSize="16dp"
            android:textColor="#FF9100"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            />
        <EditText
            android:id="@+id/et_changepassword_oldpwd"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:hint="请输入原密码"
            android:textSize="16dp"
            android:background="@null"
            />
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginTop="9dp"
            android:orientation="horizontal"
            android:background="#FFFFFF">
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="新密码"
                android:textSize="16dp"
                android:textColor="#FF9100"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"

                />

    <EditText
        android:id="@+id/et_changepassword_newpwd"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:hint="请输入新密码"
        android:textSize="16dp"
        android:background="@null"
        />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#EAEAEB"
        >
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginTop="9dp"
        android:orientation="horizontal"
        android:background="#FFFFFF">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="确认密码"
            android:textSize="16dp"
            android:textColor="#FF9100"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            />
        <EditText
            android:id="@+id/et_changepassword_againnewpwd"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:hint="请再次输入新密码"
            android:textSize="16dp"
            android:background="@null"
            />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:background="@drawable/button_shape"
        android:text="完 成"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="9dp"
        android:textSize="16dp"
        android:id="@+id/bt_changepassword_sure"
        />
</LinearLayout>