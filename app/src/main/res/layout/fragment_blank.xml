<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.buuyou.fragment.Blank_Fragment">

    <!-- TODO: Update blank fragment layout -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="43dp"
        android:id="@+id/fragment_content"></FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#EAEAEB">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_alignParentBottom="true"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="41dp"
            android:id="@+id/rlayout_fragment_firstpage">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="19dp"
            android:layout_marginLeft="22dp"
            android:src="@mipmap/firstpage_selected"
            android:id="@+id/iv_fragmentblank_1"

            android:layout_marginTop="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textColor="#FF9100"
                android:layout_below="@+id/iv_fragmentblank_1"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="5dp"
                android:textSize="8dp"
                android:id="@+id/tv_fragmentblank_1"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="41dp"
            android:id="@+id/rlayout_fragment_bill">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="19dp"
            android:layout_marginLeft="22dp"
            android:src="@mipmap/bill_unselect"
            android:id="@+id/iv_fragmentblank_2"

            android:layout_marginTop="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账单"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="5dp"
                android:textSize="8dp"
                android:layout_below="@+id/iv_fragmentblank_2"
                android:id="@+id/tv_fragmentblank_2"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="41dp"
            android:id="@+id/rlayout_fragment_accountmanagement">
        <ImageView
            android:layout_width="20dp"

            android:layout_height="19dp"
            android:src="@mipmap/accountmanagement_unselect"
            android:id="@+id/iv_fragmentblank_3"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="4dp"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账户管理
"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="5dp"
                android:textSize="8dp"
                android:layout_below="@+id/iv_fragmentblank_3"
                android:id="@+id/tv_fragmentblank_3"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="41dp"
            android:id="@+id/rlayout_fragment_notice">
        <ImageView
            android:layout_width="20dp"

            android:layout_height="19dp"
            android:src="@mipmap/notice_unselect"
            android:id="@+id/iv_fragmentblank_4"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公告"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="5dp"
                android:textSize="8dp"
                android:layout_below="@+id/iv_fragmentblank_4"
                android:id="@+id/tv_fragmentblank_4"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="41dp"
            android:layout_gravity="center"
            android:id="@+id/rlayout_fragment_mine">
        <ImageView
            android:layout_width="20dp"

            android:layout_height="19dp"
            android:src="@mipmap/mine_unselect"
            android:id="@+id/iv_fragmentblank_5"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="5dp"
                android:textSize="8dp"
                android:layout_below="@+id/iv_fragmentblank_5"
                android:id="@+id/tv_fragmentblank_5"/>
        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>
